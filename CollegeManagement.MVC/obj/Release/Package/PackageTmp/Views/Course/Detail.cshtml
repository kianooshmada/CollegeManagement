@model CollegeManagement.MVC.Models.vmCourseDetails

@{
    ViewBag.Title = Model.PageTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="askiran-block">
    <div class="askiran-block-title">
        <a class="new-item-link" href=@Url.Action("List")>Course List<i class="fa"></i></a><i class="fa list"></i>@Model.PageTitle
    </div>
    <div class="askiran-block-content">
        @if (Model.SystemMessage != null)
        {
            @Html.Partial("Partials/_SystemMessage", Model.SystemMessage)
        }
        <form method="post" enctype="multipart/form-data">
            <div class="control-row">
                <label class="control-title" for="Course_Name">Name<span class="ask-rq fa" title="necessary"></span></label>
                <div class="item-control">
                    @Html.TextBoxFor(m => m.Course.Name, new { @MaxLength = "16" })
                    @Html.ValidationMessage("Name")
                </div>
            </div>
            <div class="control-row">
                <input type="submit" ID="btn_save" value="Update" />
            </div>
        </form>
    </div>
</div>